        <restricted>true</restricted>
        <valueSetDefinition>
            <sorted>false</sorted>
            <value>
                <fullName>Related</fullName>
                <default>false</default>
                <label>Related</label>
            </value>
            <value>
                <fullName>Blocking Dependency</fullName>
                <default>false</default>
                <label>Blocking Dependency</label>
            </value>
