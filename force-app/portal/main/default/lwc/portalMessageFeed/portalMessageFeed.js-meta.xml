<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Portal Message Feed</masterLabel>
    <description>Read-only message feed that reuses Portal Messaging logic with configurable context and limits.</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>
        lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Account</object>
                <object>Project__c</object>
                <object>Project_Task__c</object>
            </objects>
            <property name="relatedAccountId" type="String" label="Related Account ID"
                description="Account context for the feed." />
            <property name="relatedProjectId" type="String" label="Related Project ID"
                description="Project context for the feed." />
            <property name="relatedTaskId" type="String" label="Related Task ID"
                description="Task context for the feed." />
            <property name="limitCount" type="Integer" label="Max messages"
                description="Number of messages to show (default 5)." />
            <property name="orderByField" type="String" label="Order By Field"
                description="CreatedDate, LastEditedDate, or IsPinned." />
            <property name="orderDirection" type="String" label="Order Direction"
                description="ASC or DESC." />
            <property name="recipientType" type="String" label="Recipient Type"
                description="Filter by recipient type (Client or Milestone Team)." />
        </targetConfig>
        <targetConfig targets="lightning__AppPage,lightning__HomePage">
            <property name="relatedAccountId" type="String" label="Related Account ID"
                description="Account context for the feed." />
            <property name="relatedProjectId" type="String" label="Related Project ID"
                description="Project context for the feed." />
            <property name="relatedTaskId" type="String" label="Related Task ID"
                description="Task context for the feed." />
            <property name="limitCount" type="Integer" label="Max messages"
                description="Number of messages to show (default 5)." />
            <property name="orderByField" type="String" label="Order By Field"
                description="CreatedDate, LastEditedDate, or IsPinned." />
            <property name="orderDirection" type="String" label="Order Direction"
                description="ASC or DESC." />
            <property name="recipientType" type="String" label="Recipient Type"
                description="Filter by recipient type (Client or Milestone Team)." />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
