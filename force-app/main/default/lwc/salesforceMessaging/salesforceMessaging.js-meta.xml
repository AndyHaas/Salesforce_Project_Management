<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Salesforce Messaging</masterLabel>
    <description>Salesforce wrapper for messaging component - ensures proper initialization in Salesforce context</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Account</object>
                <object>Project__c</object>
                <object>Project_Task__c</object>
            </objects>
            <property name="recordId" type="String" label="Record ID"
                description="Automatically populated with the record ID when placed on a record page" />
            <property name="relatedAccountId" type="String" label="Related Account ID"
                description="Account ID for message context" />
            <property name="relatedProjectId" type="String" label="Related Project ID"
                description="Project ID for message context" />
            <property name="relatedTaskId" type="String" label="Related Task ID"
                description="Task ID for message context" />
        </targetConfig>
        <targetConfig targets="lightning__AppPage,lightning__HomePage">
            <property name="relatedAccountId" type="String" label="Related Account ID"
                description="Account ID for message context" />
            <property name="relatedProjectId" type="String" label="Related Project ID"
                description="Project ID for message context" />
            <property name="relatedTaskId" type="String" label="Related Task ID"
                description="Task ID for message context" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
