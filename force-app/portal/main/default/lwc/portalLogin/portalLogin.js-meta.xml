<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Portal Login</masterLabel>
    <description>Custom login page for Experience Cloud with email verification and OTP</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Page,lightningCommunity__Default">
            <property name="showEmailStep" type="Boolean" default="true" label="Show Email Step" description="Show the email input step"/>
            <property name="showOTPStep" type="Boolean" default="true" label="Show OTP Step" description="Show the OTP verification step"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
